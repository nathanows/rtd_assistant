<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <h2>Sign Up Now <small>It's free and always will be.</small></h2>
  <hr class="colorgraph">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
      <div class="form-group field">
        <%= f.text_field :email, class: "input-lg form-control", placeholder: "First Name", tabindex: "1"  %>
      </div>
    </div>
    <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
      <div class="form-group">
        <%= f.text_field :email, class: "input-lg form-control", placeholder: "Last Name", tabindex: "2"  %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <%= f.email_field :email, class: "input-lg form-control", placeholder: "Email", tabindex: "3"  %>
  </div>
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-md-6">
      <div class="form-group">
        <%= f.password_field :password, autocomplete: "off", class: "input-lg form-control", placeholder: "Password", tabindex: "4"  %>
      </div>
    </div>
    <div class="col-xs-12 col-sm-6 col-md-6">
      <div class="form-group">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "input-lg form-control", placeholder: "Confirm Password", tabindex: "5"  %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-4 col-sm-2 col-md-2">
      <span class="button-checkbox">
        <button type="button" class="btn" data-color="info" tabindex="7"> I Agree</button>
        <input type="checkbox" name="t_and_c" id="t_and_c" class="hidden" value="1">
      </span>
    </div>
    <div id="term-blurb" class="col-xs-8 col-sm-10 col-md-10">
      <p>By clicking <strong class="label label-primary">register</strong>, you agree to the <a href="#" data-toggle="modal" data-target="#t_and_c_m">terms and conditions</a> set out by this site, including our cookie use.</p>
    </div>
  </div>
  <div class="row oauth-login-btns">
    <div class="col-xs-12 col-sm-4 col-md-4">
      <a href="/users/auth/facebook" class="zocial facebook sign-up-oauth">Sign up with Facebook</a>
    </div>
    <div class="col-xs-12 col-sm-4 col-md-4">
      <a href="/users/auth/linkedin" class="zocial linkedin sign-up-oauth">Sign up with LinkedIn</a>
    </div>
    <div class="col-xs-12 col-sm-4 col-md-4">
      <a href="/users/auth/google_oauth2" class="zocial googleplus sign-up-oauth">Sign up with Google</a>
    </div>
  </div>
  <hr class="colorgraph">
  <div class="row">
    <div class="actions">
      <div class="col-xs-12 col-md-6">
        <%= f.submit "Register", class: "btn btn-primary btn-block btn-lg sign-up-submit", tabindex: "7" %>
      </div>
    </div>
    <div class="col-xs-12 col-md-6"><a href="#" class="btn btn-success btn-block btn-lg">Sign In</a></div>
  </div>
<% end %>

<%= javascript_tag do %>
  $(".sign-up-oauth, .sign-up-submit").on("click", function() {
    if(!$("#t_and_c").is(':checked')) {
      alert("Please accept the terms and conditions first.");
      return false;
    }
  })
<% end %>
