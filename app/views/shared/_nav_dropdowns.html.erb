  <div id="dash-dropdown">
    <nav class="navbar navbar-default" role="navigation">
      <ul class="nav navbar-nav">
        <li class="dash-nav-btn">
          <%= link_to dashboard_path do %>
            <p><%= icon("calendar", "", class: "navbar-link-icon" ) %> Schedule</p>
          <% end %>
        </li>
        <li class="dash-nav-btn">
          <%= link_to dashboard_path do %>
            <p><%= icon("gear", "", class: "navbar-link-icon" ) %> Options</p>
          <% end %>
        </li>
        <li class="dash-nav-btn">
          <%= link_to dashboard_path do %>
            <p><%= icon("map-marker", "", class: "navbar-link-icon" ) %> Locations</p>
          <% end %>
        </li>
        <li class="dash-nav-btn">
          <%= link_to dashboard_path do %>
            <p><%= icon("bar-chart", "", class: "navbar-link-icon" ) %> Analytics</p>
          <% end %>
        </li>
        <li class="dash-nav-btn">
          <%= link_to dashboard_path do %>
            <p><%= icon("user", "", class: "navbar-link-icon" ) %> Profile</p>
          <% end %>
        </li>
      </ul>
    </nav>
  </div>
</div>
